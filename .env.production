# ==========================================
# DIGICARD ENTERPRISE - PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# This file is for production deployment on app.card2contacts.com

# ==========================================
# DEPLOYMENT & ENVIRONMENT
# ==========================================
ENVIRONMENT=production
FRONTEND_URL=https://app.card2contacts.com
BACKEND_URL=https://app.card2contacts.com
ALLOWED_ORIGINS=https://app.card2contacts.com

# ==========================================
# DATABASE
# ==========================================
# Update these with your production database credentials
DATABASE_URL=postgresql://admin:CHANGE_THIS_PASSWORD@db:5432/scanner_prod

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_GENERATED_WITH_OPENSSL
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ==========================================
# GOOGLE OAUTH
# ==========================================
# Get these from: https://console.cloud.google.com/apis/credentials
# These should be configured for app.card2contacts.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
REDIRECT_URI=https://app.card2contacts.com/api/auth/google/callback

# ==========================================
# AI/LLM CONFIGURATION
# ==========================================
LLM_MODEL=llama-3.1-8b-instant

# AI Provider API Keys
GEMINI_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key

# ==========================================
# OCR CONFIGURATION
# ==========================================
OCR_PROVIDER=mistral

# Mistral OCR Settings
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-ocr-2512
MISTRAL_TIMEOUT=60

# ==========================================
# BUSINESS LOGIC - FREE TIER LIMITS
# ==========================================
FREE_TIER_SCAN_LIMIT=4
DEFAULT_MAX_SUB_ACCOUNTS=5

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=your-email@card2contacts.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=DigiCard <your-email@card2contacts.com>

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_PER_MINUTE=60
BULK_SCAN_MAX_FILES=100
